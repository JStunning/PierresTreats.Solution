@{
  Layout = "_Layout";
}

@model Pierres.Models.Treat

<h2>Add a new Treat</h2>
@using (Html.BeginForm())
{
    @Html.LabelFor(model => model.TreatName)
    @Html.TextBoxFor(model => model.TreatName)<br>

    @Html.Label("Select Flavor")
    @Html.DropDownList("FlavorId")<br>

    <input class="button" type="submit" value="Add new Treat" />
}
<p>@Html.ActionLink("Show all Treats", "Index")</p>