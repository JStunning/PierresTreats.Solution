@{
    Layout = "_Layout";
}

@using Pierres.Models;
@model List<Pierres.Models.Treat>;

<h2>Treats</h2>

@if (Model.Count == 0)
{
    <h3>No Treats have been added yet!</h3>
}

@foreach (Treat treat in Model)
{
    <li>
        @Html.ActionLink($"{ treat.TreatName }", "Details", new { id = treat.TreatId })
    </li>
}

<p class="addLink">@Html.ActionLink("Add new Treat", "Create")</p>
<p>@Html.ActionLink("See all Flavors", "Index", "Flavors")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>
