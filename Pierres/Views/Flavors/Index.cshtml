@{
    Layout = "_Layout";
}

@using Pierres.Models;
@model List<Pierres.Models.Flavor>;

<h2>Flavors</h2>

@if (Model.Count == 0)
{
    <h3>No Flavors have been added yet!</h3>
}

@foreach (Flavor flavor in Model)
{
    <li>
        @Html.ActionLink($"{ flavor.FlavorName }", "Details", new { id = flavor.FlavorId })
    </li>
}

<p class="addLink">@Html.ActionLink("Add new Flavor", "Create")</p>
<p>@Html.ActionLink("Back to Treats", "Index", "Treats")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>
